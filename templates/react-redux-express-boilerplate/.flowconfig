[ignore]
.*/build
.*/coverage
.*/node_modules
.*/test

[include]

[libs]
./flow/
./node_modules/flow-interfaces/interfaces/CSSModule.d.js

[options]
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.json
module.file_ext=
module.system=haste
esproposal.decorators=ignore


suppress_type=$FlowIssue
suppress_type=$FlowFixMe
suppress_type=$FlowFixedInNextDeploy
suppress_type=$FlowExpectedError

suppress_comment=\\(.\\|\n\\)*\\$FlowFixMe\\($\\|[^(]\\|(\\(>=0\\.\\(3[0-1]\\|[1-2][0-9]\\|[0-9]\\).[0-9]\\)? *\\(site=[a-z,_]*www[a-z,_]*\\)?)\\)
suppress_comment=\\(.\\|\n\\)*\\$FlowIssue\\((\\(>=0\\.\\(3[0-1]\\|[1-2][0-9]\\|[0-9]\\).[0-9]\\)? *\\(site=[a-z,_]*www[a-z,_]*\\)?)\\)?:? #[0-9]+
suppress_comment=\\(.\\|\n\\)*\\$FlowFixedInNextDeploy
suppress_comment=\\(.\\|\n\\)*\\$FlowExpectedError
